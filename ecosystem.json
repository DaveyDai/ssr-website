{
  "name": "sunvalley-vava-website", // 应用名称
  "script": "server.js", // 实际启动脚本
  "log_date_format" : "YYYY-MM-DD HH:mm Z",
  // 监控变化的目录，一旦变化，自动重启
  "watch": [
    "dist" 
  ],
  // 从监控目录中排除
  "ignore_watch": [
    "node_modules",
    "logs",
    "static"
  ],
  "instances": 2,
  "watch_options": {
    "followSymlinks": false
  },
  "env": {
    "NODE_ENV": "production"
  }
}
